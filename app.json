{
  "name": "<project-name>",
  "scripts": {
    "postdeploy": "bash db.sh"
  },
  "env": {
    "STAGING_DB_URL": {
      "required": true,
      "value": "<jawsdb-url>"
    },
    "APP_ENV": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    }
  },
  "addons": [
    "jawsdb:kitefin"
  ],
  "labs": [
    "runtime-dyno-metadata"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/andimal/heroku-buildpack-nodejs-gulp-bower.git"
    },
    {
      "url": "heroku/php"
    },
    {
      "url": "https://github.com/j-mcnally/heroku-buildpack-mysql"
    },
    {
      "url": "https://github.com/j-mcnally/heroku-buildpack-wp-cli.git"
    },
    {
      "url": "https://github.com/weibeld/heroku-buildpack-run.git"
    }
  ]
}
